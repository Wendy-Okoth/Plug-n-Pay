{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true ,
    "moduleResolution": "node",        // Add this
    "allowSyntheticDefaultImports": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}